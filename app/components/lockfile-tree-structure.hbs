<input
  class="text-black px-2 py-1 mb-1 rounded-sm w-full"
  placeholder="Filter by Name"
  value={{this.filter}}
  {{on "input" this.updateInput}}
>

<VerticalCollection @items={{this.entries}} @estimateHeight={{24}} as |entry|>
  {{#let (object-at 0 entry) (object-at 1 entry) as |key value|}}
    <details class="text-white" data-test-details={{key}}>
      <summary data-test-dependency-identifier>{{key}}</summary>
      <table class="table-auto mb-2">
        <thead>
          <tr>
            <th class="px-4 py-2">Version</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="border px-4 py-2" data-test-version>
              {{value.version}}
            </td>
          </tr>
        </tbody>
      </table>
    </details>
  {{/let}}
</VerticalCollection>